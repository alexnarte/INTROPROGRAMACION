// NUMERO POSITIVO O NEGATIVO O SI ES CERO.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;


void main()
{
	int a;
	cout<<"Ingrese el numero: ";
	cin>>a;
	if(a==0)
	   cout<<"El numero es cero ";
	else
	   if(a>0)
	      cout<<"El numero es positivo ";
	   else
	      cout<<"El numero es negativo ";
	getch();
}
