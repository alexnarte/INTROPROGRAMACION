// PROG03.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include<iostream>
#include "conio.h"
using namespace std;

// Para leer variables de texto se utiliza el operador << del objeto cin, que
// lee solo una palabra. Para leer una linea completa (es decir, incluyendo los
// espacios en blanco) se debe utilzar getline (ej, reemplazar cin>>x por
// getline(cin,x)), pero obliga a agregar un cin.ignore() si antes del getline
// se leyÃ³ otra variable con >>.

int main() 
{int a,b,c,d,e,g; float f;
	
    cout << "Ingrese el primer numero:" << endl;
	cin >> a;
	cout << "Ingrese el segundo numero:" << endl;
	cin >> b;
	c = a+b;
	d = a-b;
	e = a*b;
	f = a/b;
	g = a%b;
	cout << "La suma es:: " << c << endl;
	cout << "La resta es: " << d << endl;
	cout << "La multiplicacion es: " << e << endl;
	cout << "La division es: " << f << endl;
	cout << "El residuo es: " << g << endl;
	getch();
	return 0;
}


